<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Display">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox_ch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/aqua"
                android:checked="true"
                android:text="@string/ch1"
                android:textColor="@color/aqua"
                android:textColorLink="@color/fuchsia" />

            <CheckBox
                android:id="@+id/checkBox_ch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/fuchsia"
                android:checked="true"
                android:text="@string/ch2"
                android:textColor="@color/fuchsia" />

            <CheckBox
                android:id="@+id/checkBox_ch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/green"
                android:checked="true"
                android:text="@string/ch3"
                android:textColor="@color/green" />

            <CheckBox
                android:id="@+id/checkBox_ch4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@android:color/holo_purple"
                android:checked="true"
                android:text="@string/ch4"
                android:textColor="@android:color/holo_purple" />

            <CheckBox
                android:id="@+id/checkBox_ch5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/orange"
                android:checked="true"
                android:text="@string/ch5"
                android:textColor="@color/orange" />

            <CheckBox
                android:id="@+id/checkBox_ch6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/red"
                android:checked="true"
                android:text="@string/ch6"
                android:textColor="@color/red" />

            <CheckBox
                android:id="@+id/checkBox_ch7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/yellow"
                android:checked="true"
                android:text="@string/ch7"
                android:textColor="@color/yellow" />

            <CheckBox
                android:id="@+id/checkBox_ch8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/black"
                android:checked="true"
                android:text="@string/ch8"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/YAxis_title"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:rotation="-90"
                android:text="@string/YAxis_label"
                android:textSize="12sp"
                android:textStyle="bold" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/layout_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/XAxis_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/XAxis_label"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>